
---
layout: layout.liquid
title: Archive
---

<section class="container mx-auto px-6 py-32">
  <div class="mb-24 border-b border-zinc-200 pb-12">
    <h1 class="text-5xl md:text-8xl font-black tracking-tighter">THE FULL<br>CATALOGUE.</h1>
  </div>

  <div class="space-y-12">
    {% for post in collections.posts %}
      <div class="flex flex-col md:flex-row md:items-center justify-between group py-8 border-b border-zinc-100 last:border-0">
        <div class="md:flex-1">
          <span class="text-[10px] font-bold uppercase tracking-widest text-zinc-400 block mb-2">{{ post.data.category }}</span>
          <a href="{{ post.url }}" class="text-2xl md:text-4xl font-bold tracking-tight text-zinc-900 group-hover:text-zinc-500 transition">
            {{ post.data.title }}
          </a>
        </div>
        <div class="mt-4 md:mt-0 md:text-right">
          <time class="text-sm font-medium text-zinc-400">{{ post.date | postDate }}</time>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
